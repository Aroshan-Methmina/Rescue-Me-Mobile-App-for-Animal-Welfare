<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/c1"
    tools:context=".User.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="710dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/viewpager_bkg"
        android:orientation="vertical"
        android:outlineSpotShadowColor="@color/c2">


        <ImageView
            android:id="@+id/imgbell4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/promo" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:text=" Account "
            android:textColor="@color/c2"
            android:textSize="40dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnmyprofile"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/c4"
                android:text="My Profile"
                android:textColor="@color/c2"
                android:textStyle="bold"
                app:strokeColor="@color/c2"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/btnabout"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/c4"
                android:text="About Us"
                android:textColor="@color/c2"
                android:textStyle="bold"
                app:strokeColor="@color/c2"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/btnmyappoinmet"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/c4"
                android:text="My Appoiment"
                android:textColor="@color/c2"
                android:textStyle="bold"
                app:strokeColor="@color/c2"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/btnmyreservation"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/c4"
                android:text="My Reservations"
                android:textColor="@color/c2"
                android:textStyle="bold"
                app:strokeColor="@color/c2"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/btnmyreport"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/c4"
                android:text="My Report"
                android:textColor="@color/c2"
                android:textStyle="bold"
                app:strokeColor="@color/c2"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/btncontactus"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/c4"
                android:text="Contact Us"
                android:textColor="@color/c2"
                android:textStyle="bold"
                app:strokeColor="@color/c2"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/btnlogout"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/c4"
                android:text="Log Out"
                android:textColor="@color/c2"
                android:textStyle="bold"
                app:strokeColor="@color/c2"
                app:strokeWidth="3dp" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text=" Made â¤ with in ðŸ‡±ðŸ‡°"
                android:textColor="@color/c2"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

</FrameLayout>