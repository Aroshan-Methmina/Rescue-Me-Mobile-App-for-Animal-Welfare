<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/c1"
    tools:context=".Shelter.S_ContactUsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="@drawable/viewpager_bkg"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us "
                android:textColor="@color/c2"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/etsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_bg"
                android:drawableStart="@drawable/shelter"
                android:drawablePadding="10dp"
                android:hint="Shelter Name"
                android:inputType="text"
                android:padding="10dp" />

            <EditText
                android:id="@+id/etscontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_bg"
                android:drawableStart="@drawable/contact"
                android:drawablePadding="10dp"
                android:hint="Contact Number"
                android:inputType="number"
                android:padding="10dp" />


            <EditText
                android:id="@+id/etmessage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="12dp"
                android:minLines="3"
                android:gravity="top|start"
                android:background="@drawable/edittext_bg"
                android:drawablePadding="10dp"
                android:hint="Message"
                android:inputType="textMultiLine"
                android:padding="10dp" />


            <Button
                android:id="@+id/btnusubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/c2"
                android:textColor="@color/c3"
                android:textStyle="bold"
                android:text="Submit" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>