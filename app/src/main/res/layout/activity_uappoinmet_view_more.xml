<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c1"
    android:orientation="vertical"
    tools:context=".User.U_Appoinmet_ViewMore">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:outlineSpotShadowColor="@color/c2"
        android:background="@drawable/viewpager_bkg"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Appoinmet"
                android:textColor="@color/c2"
                android:textSize="25sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Details"
                android:textColor="@color/c2"
                android:layout_marginTop="5dp"
                android:layout_gravity="start"
                android:textSize="20sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/imgpetProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/edittext_bg"
                android:scaleType="centerCrop"
                android:src="@drawable/add_pet"
                android:contentDescription="Pet Profile Image" />

            <TextView
                android:id="@+id/tvpetcategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_bg"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/category"
                android:text="Category"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:enabled="false"/>

            <TextView
                android:id="@+id/tvpetname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_bg"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/pet_name"
                android:text="Pet Name"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:enabled="false"/>

            <TextView
                android:id="@+id/tvpetage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_bg"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/age"
                android:text="Pet Age"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:enabled="false"/>

            <TextView
                android:id="@+id/tvpetgender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_bg"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/pet"
                android:text="Pet Gender"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:enabled="false"/>

            <TextView
                android:id="@+id/tvpetdescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_bg"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/description_alt"
                android:inputType="textMultiLine"
                android:text="Description"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:enabled="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shelter Details"
                android:textColor="@color/c2"
                android:layout_marginTop="10dp"
                android:layout_gravity="start"
                android:textSize="20sp"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/tvsheltername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_bg"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/shelter"
                android:text="Shelter Name"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:enabled="false"/>

            <TextView
                android:id="@+id/tvsheltercontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_bg"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/contact"
                android:text="Shelter Contact Numabr"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:enabled="false"/>


            <Button
                android:id="@+id/btnviewlocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/c2"
                android:textColor="@color/c3"
                app:strokeColor="@color/c3"
                android:textStyle="bold"
                app:strokeWidth="3dp"
                android:layout_margin="15dp"
                android:text="View Location" />

            <Button
                android:id="@+id/btneditappoiment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/c2"
                android:textColor="@color/c3"
                app:strokeColor="@color/c3"
                android:textStyle="bold"
                app:strokeWidth="3dp"
                android:layout_margin="15dp"
                android:text="Edit Appoiment" />

            <Button
                android:id="@+id/btndeleteappoinemt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/c6"
                android:textColor="@color/c3"
                app:strokeColor="@color/c3"
                android:textStyle="bold"
                app:strokeWidth="3dp"
                android:layout_margin="15dp"
                android:text="Delete Apoiment" />


        </LinearLayout>

        </ScrollView>
    </LinearLayout>
</LinearLayout>