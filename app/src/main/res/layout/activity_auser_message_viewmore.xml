<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c1"
    android:orientation="vertical"
    tools:context=".Admin.A_UserMessageViewmore">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:outlineSpotShadowColor="@color/c2"
        android:background="@drawable/viewpager_bkg"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Message"
                    android:textColor="@color/c2"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message Details"
                    android:textColor="@color/c2"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="start"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext_bg"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/user"
                    android:text="User Name"
                    android:textColor="@android:color/black"
                    android:padding="10dp"
                    android:enabled="false"/>

                <TextView
                    android:id="@+id/tvcontact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_bg"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/contact"
                    android:text="Contact Number"
                    android:textColor="@android:color/black"
                    android:padding="10dp"
                    android:enabled="false"/>



                <TextView
                    android:id="@+id/tvpetdescription"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_bg"
                    android:drawablePadding="10dp"
                    android:inputType="textMultiLine"
                    android:text="Massage"
                    android:textColor="@android:color/black"
                    android:padding="10dp"
                    android:enabled="false"/>



                <Button
                    android:id="@+id/btnhold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/c2"
                    android:textColor="@color/c3"
                    app:strokeColor="@color/c3"
                    android:textStyle="bold"
                    app:strokeWidth="3dp"
                    android:layout_margin="15dp"
                    android:text="Hold" />

                <Button
                    android:id="@+id/btndelet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/c2"
                    android:textColor="@color/c3"
                    app:strokeColor="@color/c3"
                    android:textStyle="bold"
                    app:strokeWidth="3dp"
                    android:layout_margin="15dp"
                    android:text="Complete" />



            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</LinearLayout>