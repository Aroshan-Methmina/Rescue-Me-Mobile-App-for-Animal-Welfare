<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/c1"
    tools:context=".User.DonationFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="710dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="15dp"
        android:outlineSpotShadowColor="@color/c2"
        android:layout_marginTop="40dp"
        android:background="@drawable/viewpager_bkg"
        android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donate for Helpless Animals"
                android:padding="30dp"
                android:textColor="@color/c2"
                android:layout_marginTop="-25dp"
                android:textSize="40sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="We help Stray animals, Please support us in any way you can"
                android:textColor="@color/c2"
                android:layout_marginTop="-30dp"
                android:textSize="18sp"
                android:textStyle="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-22dp"
            android:padding="20dp"
            android:text="Slecte Shelter "
            android:textColor="@color/c2"
            android:textSize="18sp"
            android:textStyle="normal" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:hint="Slecte Shelter">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/spinnerPetId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:inputType="none"
            android:cursorVisible="false"
            android:clickable="true"
            android:longClickable="false"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edittext_bg"
            android:drawablePadding="10dp"
            android:padding="10dp"/>

        </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="First Name"
                android:textColor="@color/c2"
                android:layout_marginTop="-20dp"
                android:textSize="18sp"
                android:textStyle="normal" />


            <EditText
                android:id="@+id/etFname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edittext_bg"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:padding="10dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Last Name"
                android:textColor="@color/c2"
                android:textSize="18sp"
                android:layout_marginTop="-20dp"
                android:textStyle="normal" />


            <EditText
                android:id="@+id/etLname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edittext_bg"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:padding="10dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginTop="-10dp"
                android:text="I would like to make a donation in the amount of (LKR)"
                android:textColor="@color/c2"
                android:textSize="18sp"
                android:textStyle="normal" />


            <EditText
                android:id="@+id/etamount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edittext_bg"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:padding="10dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginTop="-10dp"
                android:text="Remarks"
                android:textColor="@color/c2"
                android:textSize="18sp"
                android:textStyle="normal" />


            <EditText
                android:id="@+id/etremark"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="-10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edittext_bg"
                android:drawablePadding="10dp"
                android:inputType="textMultiLine"
                android:padding="10dp" />


            <Button
                android:id="@+id/btndonation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/c2"
                android:textColor="@color/c3"
                app:strokeColor="@color/c3"
                android:textStyle="bold"
                app:strokeWidth="3dp"
                android:layout_margin="15dp"
                android:text="Continue to Payment" />




        </LinearLayout>

    </ScrollView>


    </LinearLayout>

</FrameLayout>